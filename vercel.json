{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "app.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "app.py",
      "methods": ["GET"]
    },
    {
      "src": "/logo.jpeg",
      "dest": "static/logo.jpeg"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|html))",
      "dest": "static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "static/index.html"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "regions": ["iad1"]
}
